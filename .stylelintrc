{
  "extends": "stylelint-config-standard",
  "ignoreFiles": [
    "src/**/scss/generic/*.scss",
    "src/**/scss/tools/*.scss",
    "src/**/scss/trumps/*.scss",
  ],
  rules: {
    "at-rule-no-unknown": [true, {
      "ignoreAtRules": ["function", "if", "each", "include", "mixin"]
    }],
    "no-descending-specificity": null
  }
}